<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.CampaignDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/campaign_detail_buttons">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/campaign_detail_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:text="Add a Campaign"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/campaign_detail_run"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="130dp"
                    android:src="@drawable/ic_check_off"
                    android:scaleType="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="toggleRun"/>
                <ImageButton
                    android:id="@+id/campaign_detail_save"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/ic_save"
                    android:scaleType="centerCrop"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="onSave"/>
                <ImageButton
                    android:id="@+id/campaign_detail_remove"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_remove"
                    android:scaleType="centerCrop"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="onRemove"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/campaign_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="30sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:hint="Campaign Name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/campaign_detail_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:text="destination destination destination destination destination destination destination destination destination destination destination"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start At"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/campaign_detail_startat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:text="dd/MM/yyyy"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/campaign_detail_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:text="999-999-9999"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/campaign_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:text="description description description description description description description description description"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/campaign_detail_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button
            android:id="@+id/campaign_detail_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ripples"
            android:layout_marginRight="20dp"
            android:onClick="onRipple"/>
        <Button
            android:id="@+id/campaign_detail_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:layout_marginLeft="20dp"
            android:onClick="onPhoto"/>
    </LinearLayout>
</RelativeLayout>
