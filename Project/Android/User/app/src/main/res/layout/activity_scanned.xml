<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:text="@string/app_name" />
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            android:src="@drawable/arrow_back_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp">
        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginStart="18sp"
            android:layout_marginTop="13sp"
            android:src="@drawable/btn_plus"/>
        <TextView
            android:id="@+id/scanned_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:textColor="@color/blue"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:text="SUCCESSFULLY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:layout_below="@id/scanned_txt1"
            android:textColor="@color/blue"
            android:layout_marginTop="2sp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="SCANNED!"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="18sp"
        android:background="@color/blue">
        <TextView
            android:id="@+id/txt_RippleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="BLUE MARLIN RIPPLE"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginTop="1sp"/>
        <TextView
            android:id="@+id/txt_RippleCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="#7658FR"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/txt_RippleName"
            android:layout_marginBottom="2sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_Message"
        android:layout_width="272sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:text="PLEASE ENTER RECIPIENT'S INFORMATION BELOW BEFORE HANDING OVER RIPPLE #7658FR"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="5sp">
        <EditText
            android:id="@+id/txt_email"
            android:layout_width="0sp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:paddingStart="7sp"
            android:inputType="textEmailAddress"
            android:background="@color/blue"
            android:textCursorDrawable="@null"
            android:textColor="#ffffff"
            android:hint="RECIPIENT EMAIL"
            android:textColorHint="#C7C7CD"/>
        <ImageView
            android:id="@+id/btn_go"
            android:layout_width="45sp"
            android:layout_height="35sp"
            android:src="@drawable/btn_go"/>
    </LinearLayout>
    <EditText
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:paddingStart="7sp"
        android:inputType="textPersonName"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:background="@color/blue"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"
        android:hint="RECIPIENT NAME"
        android:textColorHint="#C7C7CD"
        android:layout_marginTop="2sp" />
    <EditText
        android:id="@+id/txt_city"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:paddingStart="7sp"
        android:inputType="text"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:background="@color/blue"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"
        android:hint="RECIPIENT CITY"
        android:textColorHint="#C7C7CD"
        android:layout_marginTop="2sp" />
    <EditText
        android:id="@+id/txt_country"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:paddingStart="7sp"
        android:inputType="text"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:background="@color/blue"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"
        android:hint="RECIPIENT COUNTRY"
        android:textColorHint="#C7C7CD"
        android:layout_marginTop="2sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_uploadphoto"
            android:layout_width="190sp"
            android:layout_height="25sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/btn_uploadphoto"/>
        <ImageView
            android:id="@+id/btn_sendripple"
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:layout_below="@id/btn_uploadphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:src="@drawable/btn_sendripple"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/scanned_lay8"
        android:layout_width="match_parent"
        android:layout_height="160sp">
        <TextView
            android:layout_width="309sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="13sp"
            android:text='"EACH TIME A MAN STANDS UP FOR AN IDEAL, OR ACTS TO IMPROVE THE LOT OF OTHERS, OR  STRIKES OUT AGAINST INJUSTICE, HE SENDS FORTH A TINY RIPPLE OF HOPE, AND CROSSING EACH OTHER FROM A MILLION DIFFERENT CENTERS OF ENERGY AND DARING THOSE RIPPLES BUILD A CURRENT WHICH CAN SWEEP DOWN THE MIGHTIEST WALLS OF OPPRESSION AND RESISTANCE."'/>
    </RelativeLayout>
</LinearLayout>