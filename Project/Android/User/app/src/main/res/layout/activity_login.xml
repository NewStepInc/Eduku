<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100sp"
        android:background="@drawable/mark"
        android:layout_height="100sp"
        android:layout_marginTop="100sp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:text="eduku.org"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#348FC4"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_email"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:paddingStart="7sp"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"
        android:hint="EMAIL"
        android:textColorHint="#C7C7CD"
        android:layout_marginTop="30sp" />
    <EditText
        android:id="@+id/txt_password"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:textCursorDrawable="@null"
        android:paddingStart="7sp"
        android:layout_marginTop="3sp"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"
        android:textColor="#ffffff"
        android:hint="PASSWORD"
        android:textColorHint="#C7C7CD"
        android:inputType="textPassword" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/btn_login"/>
        <ImageView
            android:id="@+id/btn_signup"
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:src="@drawable/btn_signup"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            android:layout_toEndOf="@id/btn_login"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/btn_facebook"
        android:layout_width="237sp"
        android:layout_height="37sp"
        android:layout_marginTop="30sp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_facebok"/>
    <TextView
        android:id="@+id/btn_forgot"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/black"
        android:text="FORGOT PASSWORD?"
        android:textSize="18sp"
        android:gravity="center" />

</LinearLayout>
