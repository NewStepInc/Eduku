<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="65sp"
    android:background="@drawable/selector_item">
    <LinearLayout
        android:id="@+id/popular_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="22sp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtRippleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="-1sp"
                android:textStyle="bold"
                android:text="BLUE MARLIN RIPPLE"/>
            <TextView
                android:id="@+id/txtRippleCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="#7658FR"/>
        </LinearLayout>
        <ImageView
            android:layout_width="1sp"
            android:layout_height="48sp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="46sp"
            android:layout_marginStart="7sp"
            android:layout_height="46sp">
            <ProgressBar
                android:id="@+id/progBarCamera"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/view_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/btn_photo"
                    android:layout_width="46sp"
                    android:layout_height="46sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_back"
                    app:siBorderWidth="0dp"/>
                <ImageView
                    android:id="@+id/btn_camera"
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn_camera1"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="1sp"
            android:layout_height="48sp"
            android:layout_marginStart="7sp"
            android:background="#ffffff"/>
        <ImageView
            android:id="@+id/btn_pin"
            android:layout_width="46sp"
            android:layout_height="46sp"
            android:layout_marginStart="7sp"
            android:src="@drawable/btn_pin"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>